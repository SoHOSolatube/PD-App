rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images and assets â€” admin/manager upload, public read
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /templates/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
